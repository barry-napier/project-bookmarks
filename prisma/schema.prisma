datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Bookmark {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  url       String
  clicks    Int      @default(0)
  userId    String
  folderId  String?
  folder    Folder?  @relation(fields: [folderId], references: [id])
  favion    String?

  @@index([userId])
  @@index([folderId])
}

model Folder {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  userId    String
  bookmarks Bookmark[]
}
